#include <iostream>
#include <cmath>

using namespace std;

const double EPS = 1e-12;

double a, b, c, d, l, r, x;

double f(double x) {
    return a * x * x * x + b * x * x + c * x + d;
}

int main() {
    cin >> a >> b >> c >> d;

    r = 1;
    while (f(r) * f(-r) >= 0) r *= 2;
    l = -r;

    while (r - l > EPS) {
        x = (l + r) / 2;
        if (f(x) * f(r) > 0) r = x;
        else l = x;
    }

    cout << fixed << x << endl;

    return 0;
}
